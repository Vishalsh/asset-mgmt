<script type="text/template" id="office_new">

	<%= render 'shared/navigation' %>

<form class="office-form">

	<div class='form-horizontal'>

		<div class="form-group">
			<label class="control-label col-md-2">Name<sup>*</sup></label>
			<div class="col-md-6">
				<input type="text" name="name" id="office_name" class="form-control" value="<@= office ? office.get('name') : '' @>" />
			</div>
			<div id="office_name_error" class="error"></div>
		</div>

		<@ if (office) { @>
			<input type="hidden" id="office_id" value="<@= office.get('_id')['$oid'] @>" />
		<@ }; @>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-4">
				<button type="submit" class="btn btn-primary"><@= office ? 'Update' : 'Create' @></button>
			</div>
		</div>

	</div>
</form>

</script>