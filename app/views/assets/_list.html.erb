<script type="text/template" id="asset_list">

	<%= render 'shared/navigation' %>

  <table class='table table-striped table-bordered'>
    <thead>
			<tr>
				<th>Invoice Number</th>
				<th>Serial Number</th>
				<th>Purchased Date</th>
				<th>Mac Address</th>
				<th>Warranty</th>
				<th>Asset type</th>
				<th></th>
				<th></th>
			</tr>
    </thead>
    <tbody>
			<@ _.each(assets, function(asset) { @>
					<tr>
							<td><@= asset.get('invoice_number') @></td>
							<td><@= asset.get('serial_number') @></td>
							<td><@= asset.get('purchased_date') @></td>
							<td><@= asset.get('mac_address') @></td>
							<td><@= asset.get('warranty') @></td>
							<td><@= asset.get('asset_type_id').$oid @></td>
							<td><a href="#assets/<@= asset.get('_id')['$oid'] @>/edit" class="glyphicon glyphicon-pencil"></a></td>
							<td><a href="#assets/<@= asset.get('_id')['$oid'] @>" class="glyphicon glyphicon-trash" data-confirm="Are you sure?"></a></td>
					</tr>
			<@ }); @>
    </tbody>
  </table>

</script>