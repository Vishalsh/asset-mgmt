<script type="text/template" id="assignment_list">

	<%= render 'shared/navigation' %>

  <table class='table table-striped table-bordered'>
    <thead>
			<tr>
				<th>Start date</th>
				<th>End date</th>
				<th>Assigned to</th>
				<th></th>
			</tr>
    </thead>
    <tbody>
			<@ _.each(assignments, function(assignment) { @>
					<tr>
							<td><@= assignment.get('start_date') @></td>
							<td><@= assignment.get('end_date') @></td>
							<td><@= assignment.get('assigned_to') @></td>
							<td><a href="#assignments/<@= assignment.get('_id')['$oid'] @>/edit" class="glyphicon glyphicon-pencil"></a></td>
							<td><a href="#assignments/<@= assignment.get('_id')['$oid'] @>" class="glyphicon glyphicon-trash" data-confirm="Are you sure?"></a></td>
					</tr>
			<@ }); @>
    </tbody>
  </table>


</script>