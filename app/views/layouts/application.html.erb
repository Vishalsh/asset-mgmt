<script type="text/template" id="asset_type_list">

  <a href="#asset_types" class="btn btn-primary">list</a>
	<a href="#asset_types/new" class="btn btn-primary">new</a>

  <table class='table table-striped table-bordered'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Properties</th>
        </tr>
    </thead>
    <tbody>

        <@ _.each(asset_types, function(asset_type) { @>
            <tr>
                <td><@= asset_type.get('name') @></td>
                <td><@= asset_type.get('properties') @></td>
            </tr>
        <@ }); @>

           </tbody>
  </table>

</script>

