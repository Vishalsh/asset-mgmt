<script type="text/template" id="asset_type_new">

	<%= render 'shared/navigation' %>

<form class="asset-type-form">

	<div class='form-horizontal'>

		<div class="form-group">
			<label class="control-label col-md-2">Name<sup>*</sup></label>
			<div class="col-md-6">
				<input type="text" name="name" id="asset_type_name" class="form-control" value="<@= asset_type ? asset_type.get('name') : '' @>" />
			</div>
			<div id="asset_type_name_error" class="error"></div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">Image path<sup>*</sup></label>
			<div class="col-md-6">
				<input type="text" name="properties" id="asset_type_image_path" class="form-control" value="<@= asset_type ? asset_type.get('image_path') : '' @>"/>
			</div>
			<div id="asset_type_image_path_error" class="error"></div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">Properties<sup>*</sup></label>
			<div class="col-md-6">
				<input type="text" name="properties" id="asset_type_properties" class="form-control" value="<@= asset_type ? asset_type.get('properties') : '' @>"/>
			</div>
			<div id="asset_type_properties_error" class="error"></div>
		</div>

		<@ if (asset_type) { @>
			<input type="hidden" id="asset_type_id" value="<@= asset_type.get('_id')['$oid'] @>" />
		<@ }; @>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-4">
				<button type="submit" class="btn btn-primary"><@= asset_type ? 'Update' : 'Create' @></button>
			</div>
		</div>

	</div>
</form>



</script>