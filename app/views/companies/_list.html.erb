<script type="text/template" id="company_list">

	<%= render 'shared/navigation' %>

  <table class='table table-striped table-bordered'>
    <thead>
			<tr>
				<th>Name</th>
				<th></th>
				<th></th>
			</tr>
    </thead>
    <tbody>
			<@ _.each(companies, function(company) { @>
					<tr>
							<td><@= company.get('name') @></td>
							<td><a href="#companies/<@= company.get('_id')['$oid'] @>/edit" class="glyphicon glyphicon-pencil"></a></td>
							<td><a href="#companies/<@= company.get('_id')['$oid'] @>" class="glyphicon glyphicon-trash" data-confirm="Are you sure?"></a></td>
					</tr>
			<@ }); @>
    </tbody>
  </table>

</script>